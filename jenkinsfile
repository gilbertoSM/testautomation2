def deployEnvironments = ['Staging', 'Production'].join('\n')
 pipeline {
    agent any
  
    parameters {
    choice(
        name: 'Environment',
        choices: deployEnvironments,
        description: 'Which environment to test?',
    )
  }
     stages {
        stage('Build') {
             steps {
                 echo 'Building..'
             }
         }
         stage('Clean'){
             steps {
                 echo 'Clean...'
                 bat '''mvn clean'''
             }
         }
         stage('Validate')
         {
             steps{
             bat '''mvn validate'''
             }
         }
         stage('Compile')
         {
             steps{
             bat'''mvn compile'''
             }
         }
         
         stage('Test') {
             steps {
                 echo 'Testing..'
                bat'''mvn test'''
            }
        }
        
    }
}

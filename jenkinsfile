properties([pipelineTriggers([[$class: 'BitBucketTrigger']])])
def deployEnvironments = ['Staging', 'Production'].join('\n')

pipeline {
  agent any

  parameters {
    choice(
        name: 'Environment',
        choices: deployEnvironments,
        description: 'Which environment to test?',
    )
  }

  options {
    buildDiscarder(
     logRotator(
       daysToKeepStr: '7',
       numToKeepStr: '10'
     )
   )
  }

  stages {
    stage('Clean') {
      steps {
        bat 'mvn clean'
      }
    }
    stage('Validate') {
      steps {
        bat 'mvn validate'
      }
    }
    stage('Tests') {
      steps {
        timeout(time: 5, unit: 'MINUTES') {
            bat 'mvn compile'
            bat 'mvn test'
        }
      }
    }
  }

}


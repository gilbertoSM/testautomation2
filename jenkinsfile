def deployEnvironments = ['Staging', 'Production'].join('\n')
 pipeline {
    agent any
  
    parameters {
    choice(
        name: 'Environment',
        choices: deployEnvironments,
        description: 'Which environment to test?',
    )
  }
     stages {
        
         stage('Clean'){
             steps {
                 echo 'Clean...'
                 sh '''mvn clean'''
             }
         }
         stage('Validate')
         {
             steps{
             echo 'Validate'
             sh '''mvn validate'''
             }
         }
         stage('Tests')
         {
             steps{
             echo 'Compile'
             sh'''mvn compile'''
             }
         }
        
    }
}
